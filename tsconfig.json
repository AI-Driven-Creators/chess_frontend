{
  "compilerOptions": {
    "target": "ES2017",
    "module": "ES2015",
    "moduleResolution": "node",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true,
    "declaration": false,
    "removeComments": false,
    "lib": ["dom", "es2017", "es2018", "es2019"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}